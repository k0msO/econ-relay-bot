# Telegram API (from https://my.telegram.org)
API_ID=123456
API_HASH=your_api_hash_here

# Channels can be: public @username, private chat ID, group ID, or -100xxxx channel ID
SOURCE_CHANNEL=@source_or_group
TARGET_CHANNEL=@destination_or_group

# Proxy (optional)
PROXY_ENABLED=false
PROXY_TYPE=SOCKS5
PROXY_HOST=127.0.0.1
PROXY_PORT=1080

# LLM Rewrite (optional - any OpenAI-compatible API)
LLM_ENABLED=false
LLM_API_KEY=
LLM_API_URL=https://api.openai.com/v1/chat/completions
LLM_MODEL=gpt-4o-mini
